{
  "manifest_version": 3,
  "name": "Nsec.app Extension",
  "version": "0.1.0",
  "description": "A Chrome extension for Nsec.app",
  "icons": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./static/js/main.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["tabs", "storage", "notifications", "storage", "clipboardRead", "clipboardWrite", "background"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
