generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Keys {
  npub      String  @id
  name      String?
  ncryptsec String
  jsonData  String?
}

model Apps {
  appNpub             String  @id
  npub                String
  name                String
  icon                String?
  url                 String?
  updateTimestamp     BigInt
  subNpub             String?
  permUpdateTimestamp BigInt?
  jsonData            String?
}

model Perms {
  id        String  @id
  npub      String
  appNpub   String
  perm      String
  value     String
  timestamp BigInt
  jsonData  String?
}

model Pending {
  id        String  @id
  npub      String
  appNpub   String
  timestamp BigInt
  method    String
  jsonData  String?
}

model History {
  id        String  @id
  npub      String
  appNpub   String
  timestamp BigInt
  method    String
  allowed   Boolean
  jsonData  String?
}

model SyncHistory {
  npub     String  @id
  jsonData String?
}

model ConnectTokens {
  token     String  @id
  npub      String
  timestamp BigInt
  expiry    BigInt
  subNpub   String?
  jsonData  String?
}
